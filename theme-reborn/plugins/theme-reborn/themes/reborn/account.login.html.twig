{{ hook('HOOK_ACCOUNT_LOGIN_BEFORE_PAGE') }}
<form action="{{ getLink('account/manage') }}" method="post" style="margin: 0; padding: 0;">

	{{ csrf() }}

	{% if redirect is not null %}
		<input type="hidden" name="redirect" value="{{ redirect }}"/>
	{% endif %}


	<div class="container-sm overflow-hidden">
		<div class="container">
			<h1>Login</h1>

				{{ hook('HOOK_ACCOUNT_LOGIN_BEFORE_ACCOUNT') }}

				<div>
					<label for="inputEmail3">Username</label>
					<div>
						<input type="text" class="form-control" placeholder="Username" name="account_login" aria-label="Username">
					</div>
				</div>

				{{ hook('HOOK_ACCOUNT_LOGIN_AFTER_ACCOUNT') }}
				{{ hook('HOOK_ACCOUNT_LOGIN_BEFORE_PASSWORD') }}

				<div>
					<label for="inputEmail3">Password</label>
					<div>
						<input type="password" class="form-control" placeholder="Password" name="password_login" aria-label="Password">
					</div>
				</div>

				{{ hook('HOOK_ACCOUNT_LOGIN_AFTER_PASSWORD') }}

				<div>
					<div>
						<div class="form-check">
							<input class="form-check-input" type="checkbox" id="remember_me" name="remember_me" value="true">
							<label class="form-check-label" for="remember_me">
								Remember me
							</label>
						</div>
					</div>

					{{ hook('HOOK_ACCOUNT_LOGIN_AFTER_REMEMBER_ME') }}

					<div class="row">
						<div class="col-auto">
							<button type="submit" class="btn " name="Login">Sign in</button>
						</div>
						<div class="col-auto">
							<a href="{{ getLink('account/lost') }}" class="btn">Lost account</a>
						</div>
					</div>
				</div>
			<br/>
		</div>

		<div class="container">
			<div style="text-align:center">
				<br/>
				<h1>New to {{ config.lua.serverName }}?</h1>
				<a href="{{ getLink('account/create') }}">
					<button type="submit" class="btn " name="Create Account">Create Account</button>
				</a>
			</div>
		</div>
	</div>
</form>
